@model QLHoiThaoProject.Models.EFModel.THANHVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f">
    <div class="container f">
        <div class="panel panel-primary">
            <div class="row">
                <div class="col-md-9">
                    <div id="bookbody" style="width:1106px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">ĐĂNG KÝ THÀNH VIÊN</div>
                                    <div class="panel-body" style="padding-bottom: 0px;">
                                        <div class="row">
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()

                                                <div class="form-horizontal">

                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Lớp</div>
                                                        <div class="col-md-6">
                                                            @Html.DropDownList("IDLOP", null, htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.IDLOP, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Họ tên thành viên</div>
                                                        <div class="col-md-6">
                                                            @Html.EditorFor(model => model.TENTV, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.TENTV, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Địa chỉ email</div>
                                                        <div class="col-md-6">
                                                            @Html.EditorFor(model => model.EMAILTV, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.EMAILTV, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Số điện thoại</div>
                                                        <div class="col-md-6">
                                                            @Html.EditorFor(model => model.SDTTV, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.SDTTV, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Tên đăng nhập</div>
                                                        <div class="col-md-6">
                                                            @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-3">Mật khẩu</div>
                                                        <div class="col-md-6">
                                                            @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", @type="password" } })
                                                            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    @*<div class="form-group">
                                                        @Html.LabelFor(model => model.TRANGTHAI, htmlAttributes: new { @class = "control-label col-md-3" })
                                                        <div class="col-md-6">
                                                            <div class="checkbox">
                                                                @Html.EditorFor(model => model.TRANGTHAI)
                                                                @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>*@

                                                    <div class="form-group">
                                                        <div class="col-md-offset-3 col-md-6">
                                                            <button class="btn" type="submit">@Html.ActionLink("Hủy", "Index","Home")</button>
                                                            <input type="submit" value="Đăng ký" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>