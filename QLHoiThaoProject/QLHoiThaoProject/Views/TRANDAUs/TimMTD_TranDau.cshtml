@model QLHoiThaoProject.Models.EFModel.TRANDAU

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid f">
    <div class="container f">
        <div class="panel panel-primary">
            <div class="row">
                <div class="col-md-9">
                    <div id="bookbody" style="width:1106px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">LỊCH THI ĐẤU</div>
                                    <div class="panel-body" style="padding-bottom: 0px;">
                                        <div class="row">
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                <div class="row" style="width:1137px; margin-left:1px;">
                                                    <div class="col-md-2 pull-left">Chọn môn thi đấu:</div>
                                                    <div class="col-md-4">@Html.DropDownList("IDMTD", (SelectList)ViewBag.IDMTD, htmlAttributes: new { @class = "form-control" })</div>
                                                    <div class="col-md-4 pull-left"><input type="submit" value="Chọn" class="btn btn-default" /></div>
                                                </div>
                                            }
                                  <br />
                                            <div class="row" style="width:1137px; margin-left:1px;">
                                                <ol class="breadcrumb">
                                                    <li class="active">Danh sách vòng đấu</li>
                                                </ol>
                                            </div><!--/.row-->
                                            <table class="table table-hover" style="width:1137px; margin-left:1px;">
                                                <tr>
                                                    <th>Vòng đấu</th>
                                                    <th>Tùy chọn</th>
                                                </tr>
                                                @foreach (var item in ViewBag.VONGDAU)
                                                {
                                                    <tr>
                                                        <td>@item.TENVONGDAU</td>
                                                        <td>@Html.ActionLink("Xem lịch", "LichTranDau", new { id = item.IDVONGDAU })</td>
                                                    </tr>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>