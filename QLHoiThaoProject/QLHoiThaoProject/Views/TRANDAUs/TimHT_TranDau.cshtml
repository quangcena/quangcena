@model IEnumerable<QLHoiThaoProject.Models.EFModel.DOI>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid f">
    <div class="container f">
        <div class="panel panel-primary">
            <div class="row">
                <div class="col-md-9">
                    <div id="bookbody" style="width:1106px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">LỊCH THI ĐẤU</div>
                                    <div class="panel-body" style="padding-bottom: 0px;">
                                        <div class="row">
                                            <div class="row" style="width:1137px; margin-left:1px;">
                                                <ol class="breadcrumb">
                                                    <li class="active">Chọn kỳ hội thao</li>
                                                </ol>
                                            </div><!--/.row-->

                                            <div>

                                                <table class="table table-hover" style="width:1137px; margin-left:1px;">
                                                    <tr>
                                                        <th hidden>
                                                            Mã hội thao
                                                        </th>
                                                        <th>
                                                            Tên hội thao
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                    @foreach (var item in ViewBag.IDHT)
                                                    {
                                                        <tr>
                                                            <td hidden>
                                                                @item.IDHT
                                                            </td>
                                                            <td>
                                                                @item.TENHT
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("Chọn", "TimMTD_TranDau", new { id = item.IDHT })
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>