@model QLHoiThaoProject.Models.EFModel.HOITHAO

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section IndexAdmin{
    Quản lý Kỳ hội thao
}
<div class="row">
    <ol class="breadcrumb">
        <li class="active">Thêm hội thao mới</li>
    </ol>
</div><!--/.row-->

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Tên hội thao</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENHT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENHT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngày bắt đầu</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TUNGAY, new { htmlAttributes = new { @class = "form-control", @type="datetime" } })
                @Html.ValidationMessageFor(model => model.TUNGAY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngày kết thúc</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DENNGAY, new { htmlAttributes = new { @class = "form-control", @type = "datetime" } })
                @Html.ValidationMessageFor(model => model.DENNGAY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngày đăng ký</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYBDDK, new { htmlAttributes = new { @class = "form-control", @type = "datetime" } })
                @Html.ValidationMessageFor(model => model.NGAYBDDK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Hạn đăng ký</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYKTDK, new { htmlAttributes = new { @class = "form-control", @type = "datetime" } })
                @Html.ValidationMessageFor(model => model.NGAYKTDK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn" type="submit">@Html.ActionLink("Hủy", "Index", "HOITHAOs")</button>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}