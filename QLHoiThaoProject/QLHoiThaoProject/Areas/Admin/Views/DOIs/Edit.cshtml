@model QLHoiThaoProject.Models.EFModel.DOI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section IndexAdmin{
    Quản lý đội thi đấu
}

<div class="row">
    <ol class="breadcrumb">
        <li class="active">Cập nhật thông tin đội đăng ký thi đấu</li>
    </ol>
</div><!--/.row-->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDDOI)

        <div class="form-group">
            <div class="control-label col-md-2">Tên hội thao</div>
            <div class="col-md-10">
                @Html.DropDownList("IDHT", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDHT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên môn thi đấu</div>
            <div class="col-md-10">
                @Html.DropDownList("IDMTD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDMTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên bảng đấu</div>
            <div class="col-md-10">
                @Html.DropDownList("IDBANG", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDBANG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên lớp</div>
            <div class="col-md-10">
                @Html.DropDownList("IDLOP", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDLOP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Bị loại?</div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.BILOAI)
                    @Html.ValidationMessageFor(model => model.BILOAI, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên đội</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENDOI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENDOI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn">@Html.ActionLink("Quay lại", "Index")</button>
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

