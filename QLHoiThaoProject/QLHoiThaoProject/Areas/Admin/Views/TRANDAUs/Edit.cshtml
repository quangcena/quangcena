@model QLHoiThaoProject.Models.EFModel.TRANDAU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section IndexAdmin{
    Chọn kì hội thao
}
<div class="row">
    <ol class="breadcrumb">
        <li class="active">Cập nhật thông tin trận đấu</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <ol class="breadcrumb">
        <li class="active"><h3>Ghi chú</h3></li>
        <li class="active">Trạng thái = True : Đã thi đấu</li>
        <li class="active">Trạng thái = False : Chưa thi đấu</li>
    </ol>
</div><!--/.row-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTD)

        <div class="form-group">
            <div class="control-label col-md-2">Tên vòng đấu</div>
            <div class="col-md-10">
                @Html.DropDownList("IDVONGDAU", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDVONGDAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên trọng tài</div>
            <div class="col-md-10">
                @Html.DropDownList("IDTRONGTAI", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDTRONGTAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Sân thi đấu</div>
            <div class="col-md-10">
                @Html.DropDownList("IDSTD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDSTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Thời gian bắt đầu</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.THOIGIANBD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.THOIGIANBD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Thời gian kết thúc</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.THOIGIANKT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.THOIGIANKT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngày thi đấu</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYTHIDAU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYTHIDAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Trạng thái</div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TRANGTHAI)
                    @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn">@Html.ActionLink("Quay lại", "Index")</button>
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

